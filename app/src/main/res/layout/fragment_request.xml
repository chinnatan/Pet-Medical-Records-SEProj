<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="14dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="203dp"
                        android:layout_height="86dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/logo" />

                    <LinearLayout
                        android:layout_width="101dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_name"
                                android:layout_width="61dp"
                                android:layout_height="29dp"
                                android:text="ชื่อ :"
                                android:textColor="@color/colorWhite"
                                android:textSize="22dp" />

                            <TextView
                                android:id="@+id/request_name_output"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="บางแก้ว"
                                android:textColor="@color/colorWhite"
                                android:textSize="22dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_name_animal"
                                android:layout_width="147dp"
                                android:layout_height="29dp"
                                android:text=" สัตว์เลี้ยงในการดูแล :"
                                android:textColor="@color/colorWhite"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/request_name_animal_output"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="บางแก้ว"
                                android:textColor="@color/colorWhite"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_hospital"
                                android:layout_width="104dp"
                                android:layout_height="29dp"
                                android:text="โรงพยาบาล :"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/request_hospital_output"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="บางแก้ว"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_data"
                                android:layout_width="61dp"
                                android:layout_height="29dp"
                                android:text="วันที่ :"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/request_data_output"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="21/07/61"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/request_time"
                                android:layout_width="61dp"
                                android:layout_height="29dp"
                                android:text="เวลา :"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />

                            <TextView
                                android:id="@+id/request_time_output"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="13.50 น."
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="209dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/request_approve"
                            android:layout_width="182dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorButton"
                            android:text="อนุมัติ"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/request_not_approve"
                            android:layout_width="175dp"
                            android:layout_height="wrap_content"
                            android:background="@color/colorButton"
                            android:text="ไม่อนุมัติ"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>